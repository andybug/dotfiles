#!/bin/env python3

import curses
import subprocess
import os

def main(stdscr):
    # Clear screen
    stdscr.clear()
    stdscr.refresh()

    curses.curs_set(0)

    options = ["summit1g", "atrioc", "jokerdtv"]  # Add your options here
    current_row = 0

    # Print options
    def print_menu(row):
        stdscr.clear()
        h, w = stdscr.getmaxyx()

        for idx, option in enumerate(options):
            x = w//2 - len(option)//2
            y = h//2 - len(options)//2 + idx
            if idx == row:
                stdscr.attron(curses.color_pair(1))
                stdscr.addstr(y, x, option)
                stdscr.attroff(curses.color_pair(1))
            else:
                stdscr.addstr(y, x, option)

        stdscr.refresh()

    # Initialize color pair
    curses.init_pair(1, curses.COLOR_BLACK, curses.COLOR_WHITE)

    while True:
        print_menu(current_row)

        key = stdscr.getch()

        if key == curses.KEY_UP and current_row > 0:
            current_row -= 1
        elif key == curses.KEY_DOWN and current_row < len(options)-1:
            current_row += 1
        elif key == curses.KEY_ENTER or key in [10, 13]:
            stdscr.clear()
            #stdscr.addstr(0, 0, f"You selected {options[current_row]}")
            #stdscr.refresh()
            #stdscr.getch()

            # End curses window
            curses.endwin()

            # Fork and exec the streamlink command
            pid = os.fork()
            if pid == 0:  # child process
                os.execlp('streamlink', 'streamlink', f'https://www.twitch.tv/{options[current_row]}', 'best')
            elif pid > 0:  # parent process
                os.wait()

            break

if __name__ == "__main__":
    curses.wrapper(main)

